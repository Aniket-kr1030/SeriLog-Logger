<Window x:Class="SerilogWpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Serilog WPF Demo" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="LogButton" Content="Perform Operation" Click="LogButton_Click" HorizontalAlignment="Center" Margin="10"/>
        <ProgressBar x:Name="OperationProgress" Grid.Row="1" Margin="10" Height="20" Visibility="Collapsed" IsIndeterminate="True"/>

        <ListBox x:Name="OperationList" Grid.Row="2" Margin="10"/>
    </Grid>
</Window>
